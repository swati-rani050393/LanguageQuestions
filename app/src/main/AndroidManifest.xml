<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/languages_question"
        android:label="@string/app_name"
        android:roundIcon="@drawable/languages_question"
        android:supportsRtl="true"
        android:theme="@style/Theme.LanguageInterviewQ"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3844199791512298~6668966030"/>
        <activity
            android:name=".Screens.KotlinQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.FlutterQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.DartQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.AndroidQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.JavaQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".LogInActivity"
            android:exported="true">

            <!-- android:label="@string/title_activity_log_in" -->
            <!-- android:theme="@style/Theme.LanguageInterviewQ" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>